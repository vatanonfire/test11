{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "backend/api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/index.ts" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/api/index.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  }
}
